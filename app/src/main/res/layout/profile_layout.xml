<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/grey_200"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_iv"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:foreground="@drawable/circle_ripple"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/primary_light"
        app:civ_border_width="8dp"
        app:civ_fill_color="@color/primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <com.sample.soundcloud.ui.CustomFontTextView
            android:id="@+id/username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            tools:text="Armin Van Buuren"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_username_wrapped"
            android:visibility="gone"
            tools:visibility="visible"
            app:textFont="maven_pro_medium"/>

        <com.sample.soundcloud.ui.CustomFontTextView
            android:id="@+id/location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:layout_marginTop="4dp"
            tools:text="Leiden, Netherlands"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_location_wrapped"
            android:visibility="gone"
            tools:visibility="visible"
            app:textFont="maven_pro_medium"/>

        <com.sample.soundcloud.ui.CustomFontTextView
            android:id="@+id/followers_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:layout_marginTop="4dp"
            tools:text="1,345,234 followers"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_followers_wrapped"
            android:visibility="gone"
            tools:visibility="visible"
            app:textFont="maven_pro_medium"/>

        <com.sample.soundcloud.ui.CustomFontTextView
            android:id="@+id/track_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:layout_marginTop="4dp"
            tools:text="34 tracks"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_tracks_wrapped"
            android:visibility="gone"
            tools:visibility="visible"
            app:textFont="maven_pro_medium"/>

        <com.sample.soundcloud.ui.CustomFontTextView
            android:id="@+id/playlist_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:layout_marginTop="4dp"
            tools:text="4 playlists"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_playlists_wrapped"
            android:visibility="gone"
            tools:visibility="visible"
            app:textFont="maven_pro_medium"/>

    </LinearLayout>

</LinearLayout>